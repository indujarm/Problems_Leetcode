Sliding window technique

class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        double sum =0;
        double mx=0;
        int n = nums.size();
        for(int i=0;i<k;i++)
        {
            sum+=nums[i];
        }
        mx=sum;
        for(int i =k;i<n;i++)
        {
            sum+=nums[i];
            sum-=nums[i-k];
            mx = max(mx,sum);
        }
        return mx/k;  
    }
};
